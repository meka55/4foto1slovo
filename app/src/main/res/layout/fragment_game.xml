<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fonba"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="LEVEL"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/level"
            android:text="0"
            android:layout_marginStart="14dp"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.appcompat.widget.LinearLayoutCompat>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/firstImg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:src="@drawable/didje"/>

        <ImageView
            android:id="@+id/secondImg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="12dp"
            tools:src="@drawable/naush"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/thirdImg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:src="@drawable/nota"/>

        <ImageView
            android:id="@+id/fourImg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="12dp"
            tools:src="@drawable/ssa"/>

    </LinearLayout>

    <EditText
        android:id="@+id/answerEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColorHint="@color/white"
        android:hint="Ваш ответ"
        />

    <Button
        android:id="@+id/prinyatBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Принять"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColorHint="@color/purple_200"/>
    <ImageView
        android:id="@+id/promptBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:layout_margin="15dp"
        android:src="@drawable/lamp" />
</LinearLayout>
